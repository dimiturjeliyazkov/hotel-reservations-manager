@model HotelReservationsManager.Models.Clients.ClientsEditVM

@{
    ViewBag.Title = "Add";

}

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-green-900 mb-4">Edit Client!</h1>
                        </div>
                        @using (Html.BeginForm("Edit", "clients", FormMethod.Post, new { @class = "client" }))
                        {
                            <div class="form-group row" >
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Forename, new { htmlAttributes = new { @class = "form-control form-control-client", placeholder = "Capacity" } })
                                    Forename
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control form-control-client", placeholder = "Capacity" } })
                                    MiddleName
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control form-control-client", placeholder = "Is Free" } })
                                    SurName
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-client", placeholder = "Adult price" } })
                                EmailPrice for Adult
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.IsAdult, new { htmlAttributes = new { @class = "form-control form-control-client", placeholder = "Child price" } })
                                Is Adult
                            </div>

                            <input type="submit" value="Save" class="btn btn-success btn-default btn-block" />
                        }
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
